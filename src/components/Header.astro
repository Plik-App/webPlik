  class="relative h-dvh w-full max-w-[100vw] md:aspect-video xl:h-full container"
>
  <dialog id="my_modal_1" class="modal">
    <div class="modal-box">
      <h3 class="font-bold text-lg">Yep!</h3>
      <p class="py-4">This part is in construction, please be patient 🛠️</p>
      <div class="modal-action">
        <form method="dialog">
          <!-- if there is a button in form, it will close the modal -->
          <button class="btn">Close</button>
        </form>
      </div>
    </div>
  </dialog>
  <header class="mt-10 flex justify-between container mx-auto items-center">
    <img src="/favicon.svg" class="w-20" />
